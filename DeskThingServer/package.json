{
  "name": "deskthing",
  "version": "0.10.4",
  "description": "A DeskThing server UI to interface with the DeskThing car thing app",
  "main": "./out/main/index.js",
  "author": "Riprod",
  "homepage": "https://github.com/ItsRiprod/DeskThing",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "debug": "electron-vite dev --inspect=8893",
    "build": "npm run typecheck && electron-vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps && electron-rebuild",
    "build:unpack": "npm run build && electron-builder --dir",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itsriprod/DeskThing.git"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/auto-launch": "^5.0.5",
    "@types/ws": "^8.5.13",
    "adm-zip": "^0.5.16",
    "auto-launch": "^5.0.6",
    "cors": "^2.8.5",
    "cross-unzip": "^0.2.1",
    "electron-updater": "^6.1.7",
    "express": "^4.21.0",
    "lottie-react": "^2.4.0",
    "react-qr-code": "^2.0.15",
    "react-rewards": "^2.0.4",
    "react-router-dom": "^6.26.2",
    "react-select": "^5.8.3",
    "react-tag-input": "^6.10.3",
    "sharp": "^0.33.5",
    "update-electron-app": "^3.1.0",
    "uuid": "^10.0.0",
    "ws": "^8.17.1",
    "zustand": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^2.5.0",
    "@eslint/js": "^9.17.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^18.19.9",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.33.2",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.4",
    "typedoc": "^0.26.10",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^5.0.12",
    "vitest": "^2.1.8"
  },
  "build": {
    "appId": "com.deskthing.app",
    "productName": "DeskThing",
    "directories": {
      "buildResources": "build"
    },
    "afterSign": "build/notarize.js",
    "files": [
      "!**/.vscode/*",
      "!src/*",
      "!electron.vite.config.{js,ts,mjs,cjs}",
      "!{.eslintignore,.eslintrc.cjs,.prettierignore,.prettierrc.yaml,dev-app-update.yml,CHANGELOG.md,README.md}",
      "!{.env,.env.*,.npmrc,pnpm-lock.yaml}",
      "!{tsconfig.json,tsconfig.node.json,tsconfig.web.json}"
    ],
    "asarUnpack": [
      "resources/**",
      "bin/**",
      "!resources/{,/**/}*.{h,hpp,cpp,cc,cxx}"
    ],
    "protocols": [
      {
        "name": "DeskThing Protocol",
        "schemes": [
          "deskthing"
        ]
      }
    ],
    "win": {
      "verifyUpdateCodeSignature": false,
      "executableName": "DeskThing",
      "artifactName": "${name}-${os}-${version}-setup.${ext}",
      "publisherName": "Riprod",
      "extraFiles": [
        {
          "from": "adb_source/win",
          "to": "resources/win"
        }
      ]
    },
    "nsis": {
      "artifactName": "${name}-${os}-${version}-setup.${ext}",
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": "always",
      "oneClick": true,
      "perMachine": false
    },
    "mac": {
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSAppleEventsUsageDescription": "This app requires access to send Apple Events to communicate with other applications.",
        "NSMicrophoneUsageDescription": "This app requires microphone access to record audio."
      },
      "notarize": false,
      "category": "public.app-category.developer-tools",
      "extraFiles": [
        {
          "from": "adb_source/mac",
          "to": "resources/mac"
        }
      ]
    },
    "dmg": {
      "sign": false,
      "artifactName": "${name}-${os}-${arch}-${version}-setup.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Riprod",
      "category": "Utility",
      "extraFiles": [
        {
          "from": "adb_source/linux",
          "to": "resources/linux"
        }
      ]
    },
    "appImage": {
      "artifactName": "${name}-${os}-${version}-setup.${ext}"
    },
    "npmRebuild": false,
    "publish": {
      "provider": "github",
      "owner": "ItsRiprod",
      "repo": "DeskThing",
      "releaseType": "release"
    }
  },
  "electronDownload": {
    "mirror": "https://npmmirror.com/mirrors/electron/"
  }
}
